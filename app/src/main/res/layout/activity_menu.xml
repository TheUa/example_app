<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/back"
                                                   tools:context="com.emtvoinos.studentwork.androidslotmachine.com.example.hayleyprior.MenuActivity">

    <Button
            android:id="@+id/newGameBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="84dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:onClick="onClickNewGameButton"
            android:text="@string/new_game_btn"
            android:textColor="@color/neon_blue"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_name" app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintVertical_bias="0.0"/>

    <ImageView
            android:id="@+id/game_name"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/game_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/logo"/>

</androidx.constraintlayout.widget.ConstraintLayout>
